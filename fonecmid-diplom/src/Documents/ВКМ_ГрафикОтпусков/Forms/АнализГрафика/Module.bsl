	ДиаграммаГанта.Очистить();
	ДанныеДляГрафика = ПолучитьИзВременногоХранилища(Параметры.Адрес);
    ПостроитьДиаграммуГанта(ДанныеДляГрафика, ДиаграммаГанта);
    ДиаграммаГанта.Обновление = Истина;
